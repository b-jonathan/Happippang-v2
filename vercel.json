{
  "version": 2,
  "devCommand": "npm frontend run dev",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "backend/api/index.py", "use": "@vercel/python" }
  ],
  "functions": { "backend/api/index.py": { "runtime": "python3.11" } },
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}